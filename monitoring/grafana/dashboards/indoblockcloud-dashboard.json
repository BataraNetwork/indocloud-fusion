{
  "dashboard": {
    "id": null,
    "title": "IndoBlockCloud - Application Dashboard",
    "tags": ["indoblockcloud", "blockchain", "web3"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"indoblockcloud\"}[5m])",
            "legendFormat": "{{ method }} {{ status }}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"indoblockcloud\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"indoblockcloud\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"indoblockcloud\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"indoblockcloud\"}[5m]) * 100"
          }
        ],
        "postfix": "%",
        "colorBackground": true,
        "thresholds": "1,5",
        "colors": ["#299c46", "#e24d42", "#d44a3a"],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "singlestat",
        "targets": [
          {
            "expr": "increase(user_sessions_total{job=\"indoblockcloud\"}[1h])"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Web3 Transactions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(web3_transactions_total{job=\"indoblockcloud\"}[5m])",
            "legendFormat": "{{ status }}"
          }
        ],
        "yAxes": [
          {
            "label": "Transactions/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Storage Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "storage_bytes_used{job=\"indoblockcloud\"}",
            "legendFormat": "Used"
          },
          {
            "expr": "storage_bytes_total{job=\"indoblockcloud\"}",
            "legendFormat": "Total"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes",
            "unit": "bytes"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Node Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(compute_node_cpu_usage{job=\"indoblockcloud\"})",
            "legendFormat": "CPU Usage"
          },
          {
            "expr": "avg(compute_node_memory_usage{job=\"indoblockcloud\"})",
            "legendFormat": "Memory Usage"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "max": 100,
            "unit": "percent"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "5s"
  }
}